[Unit]
Description=CiV service
After=home.mount lightdm.service
ConditionPathExists=/etc
ConditionPathExists=/opt/civ

[Service]
Type=simple
ExecStartPre=/etc/rc.civ.pre start
ExecStart=/etc/rc.civ start
ExecStartPost=/etc/rc.civ.post start
ExecStop=/etc/civ.stop.sh
ExecStopPost=/etc/civ.stop.post.sh
TimeoutSec=0
TimeoutStopSec=3
RemainAfterExit=no
Restart=no
RestartSec=3

[Install]
WantedBy=default.target
